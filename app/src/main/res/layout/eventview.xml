<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView22"
        android:src="@drawable/technicalic"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Event Name"
        android:id="@+id/textView30"
        android:textColor="@color/mytextc"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/imageView22"
        android:layout_toEndOf="@+id/imageView22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Call"
        android:id="@+id/textView31"
        android:layout_alignTop="@+id/textView30"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:textColor="@color/mytextc"
        android:paddingRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Round 1"
        android:id="@+id/textView32"
        android:layout_below="@+id/textView30"
        android:layout_alignStart="@+id/textView30"
        android:textColor="@color/mytextc" />

</RelativeLayout>