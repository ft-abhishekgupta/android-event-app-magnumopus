<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView24"
        android:src="@drawable/technicalic"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/textView39"
        android:textColor="@color/mytextc"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/imageView24"
        android:layout_toEndOf="@+id/imageView24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Designation"
        android:id="@+id/textView40"
        android:layout_below="@+id/textView39"
        android:layout_alignStart="@+id/textView39"
        android:textColor="@color/mytextc" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/imageView23"
        android:src="@drawable/call"
        android:layout_alignBottom="@+id/textView40"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />

</RelativeLayout>